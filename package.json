{
  "name": "crypto-portfolio-backend",
  "version": "1.0.0",
  "description": "Real-time simulated crypto portfolio backend service",
  "main": "dist/index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "sim": "tsx src/sim/main.ts",
    "sim:build": "tsc && node dist/sim/main.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "migrate": "node scripts/run-migrations.js",
    "migrate:verify": "node scripts/run-migrations.js --verify",
    "migrate:test": "node scripts/run-migrations.js --test",
    "test": "vitest --run",
    "test:watch": "vitest",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:script": "./scripts/deploy.sh",
    "deploy:script:prod": "./scripts/deploy.sh production",
    "vercel:build": "npm run lint && npm run test",
    "vercel:dev": "vercel dev",
    "env:pull": "vercel env pull .env.local",
    "env:add": "vercel env add",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "crypto",
    "portfolio",
    "simulation",
    "vercel",
    "supabase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/node": "^3.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
